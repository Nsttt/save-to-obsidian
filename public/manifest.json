{
  "manifest_version": 3,
  "name": "Save to Obsidian",
  "description": "Save stuff to Obsidian",
  "version": "0.0.1",
  "author": "Néstor López",
  "icons": {
    "16": "/assets/icon-16.png",
    "32": "/assets/icon-32.png",
    "48": "/assets/icon-48.png",
    "128": "/assets/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/assets/icon-16.png",
      "48": "/assets/icon-48.png",
      "128": "/assets/icon-128.png"
    },
    "default_popup": "popup.html"
  }
}
